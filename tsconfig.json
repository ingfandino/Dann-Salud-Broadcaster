{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "backend/src/**/*.js",
    "frontend/src/**/*.js",
    "frontend/src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "backend/uploads"
  ]
}